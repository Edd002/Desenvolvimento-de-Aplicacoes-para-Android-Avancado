<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestaoCFragment">

        <ImageView
            android:id="@+id/imageViewFragmentQuestaoC"
            android:layout_width="208dp"
            android:layout_height="192dp"
            android:layout_marginTop="112dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_looks_3_24" />

        <TextView
            android:id="@+id/text_view_nome_questao_c_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:editable="false"
            android:text="Qual Ã© o sistema operacional mais utilizado no mundo?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFragmentQuestaoC" />

        <RadioGroup
            android:id="@+id/radioGroupSelecionarQuestaoCFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_nome_questao_c_fragment">

            <RadioButton
                android:id="@+id/radioButtonQuestaoCResposta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Windows" />

            <RadioButton
                android:id="@+id/radioButtonQuestaoCResposta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android" />

            <RadioButton
                android:id="@+id/radioButtonQuestaoCResposta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="iOS" />

            <RadioButton
                android:id="@+id/radioButtonQuestaoCResposta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OS X" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonQuestaoCFragmentConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Confirmar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupSelecionarQuestaoCFragment" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>